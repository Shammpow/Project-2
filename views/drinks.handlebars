<div class="allDrinks">
  <p class="title is-2">DRINKS</p>
  {{#each drinks}}
  <div class="card">
    <div class="card-header">
      <p class="title is-3">{{this.name}}</p>
    </div>
<div id="this">{{drinks}}</div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
        </div>
      </div>
      <div class="media-content">
          <img src="/assets/images/96x96.png" alt="Placeholder Image">

        <p class="title is-4">{{this.source}}</p>
      </div>
    </div>
    <div class="content">
      <ol id="list-{{this.id}}"></ol>
      <div id="ingredients-{{this.id}}">{{ this.ingredients }}</div>
      <br> {{this.recipe}}
    </div>

    <div class="card-footer">
      {{this.blurb}}
    </div>

  </div>
  {{/each }}
</div>