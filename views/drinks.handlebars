<script src="/assets/js/getDrink.js"></script>

<div class="allDrinks">
        <div class="drink"></div>
  {{#each drinks}}
  <div class="card">
    <div class="card-header subtitle-card">
      <h1 class="subtitle-jon">{{this.name}}</h1>
    </div>
    <div id="this">{{drinks}}</div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
        </div>
      </div>
      <div class="media-content">
        <img class="drinkImg" src="{{this.imageURL}}" alt="Placeholder Image">

        <p class="title is-4">{{this.source}}</p>
      </div>
    </div>
    <div class="content">
      <p class="title is-5">Ingredients</p>

      <ol id="list-{{this.id}}">
        {{#each ingredients}}
        <li>{{this}}</li>
        {{/each}}
      </ol>

      <p class="title is-5">Instructions</p>

      <div>{{this.recipe}}</div>

    </div>

    <div class="card-footer">
      {{this.blurb}}
    </div>

  </div>
  {{/each }}
</div>